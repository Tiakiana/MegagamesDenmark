<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MegagamesDenmark</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body >
    <header style="background-image: linear-gradient(to bottom right, #38040E, #640D14)">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" >
            <div class="container" style="height:35px;" >
                <a class="navbar-brand text-light" href="https://www.foeniks.org" style="margin-left:-35%;margin-right:65%">
                    <img class="navbar-brand text-light" src="~/img/RollespilsForeningenFønix.png" style="height:60px;width:60px;" />
                </a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <img src="~/img/RollespilsForeningenFønix.png" />
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AegonsConquest" asp-action="Index">Hovedside</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" style="background-color:transparent; border: hidden" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Roller
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="AegonsConquest" asp-action="Lord">Lord</a>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="AegonsConquest" asp-action="Knight">Knight</a>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="AegonsConquest" asp-action="Maester">Maester</a>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="AegonsConquest" asp-action="Heir">Heir</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Datasikkerhed</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
